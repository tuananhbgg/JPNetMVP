<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgHotNew"
                android:layout_width="match_parent"
                android:layout_height="164dp"
                android:scaleType="fitXY"
                android:src="@drawable/imgloadmore" />

            <ImageView
                android:id="@+id/imgPlay"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="64dp"
                android:src="@drawable/ic_play_arrow_24px" />

            <TextView
                android:id="@+id/tv_TenTieuDe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgHotNew"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:ellipsize="end"
                android:fontFamily="@font/helveticaneue"
                android:maxLines="2"
                android:text="Kinh nghiệm xin visa du lịch Nhật Bản tự túc không cần thư mời"
                android:textColor="#000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_Mota"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_TenTieuDe"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="8dp"
                android:ellipsize="end"
                android:fontFamily="@font/helveticaneue"
                android:maxLines="2"
                android:text="Kinh nghiệm xin visa du lịch Nhật Bản tự túc không cần thư mời" />

            <TextView
                android:id="@+id/tv_TrangThai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_Mota"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/helveticaneue"
                android:text="1 giờ trước"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/imgComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_Mota"
                android:layout_alignParentRight="true"
                android:layout_marginTop="12dp"
                android:layout_marginRight="24dp"
                android:paddingBottom="2dp"
                android:src="@drawable/ic_comment" />

            <TextView
                android:id="@+id/tvComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_Mota"
                android:layout_alignParentRight="true"
                android:layout_marginTop="8dp"
                android:layout_marginRight="16dp"
                android:fontFamily="@font/helveticaneue"
                android:text="6"
                android:textSize="12sp" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>