<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.OTPAuthenticationActivity">
    <include
        android:id="@+id/include_toolbar"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    <TextView
        android:id="@+id/tvNotification"
        android:gravity="center"
        android:textSize="14sp"
        android:fontFamily="@font/helveticaneue"
        android:text="Mã xác thực đã được gửi đến\n0123456789"
        app:layout_constraintTop_toBottomOf="@id/include_toolbar"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/edtOTP"
        android:fontFamily="@font/helveticaneue"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="42dp"
        android:layout_marginRight="42dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_edittext"
        android:hint="Mật khẩu mới"
        android:paddingLeft="16dp"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/tvNotification"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
    <EditText
        android:id="@+id/edtPass"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:fontFamily="@font/helveticaneue"
        android:layout_marginLeft="42dp"
        android:layout_marginRight="42dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_edittext"
        android:hint="Xác nhận mật khẩu"
        android:paddingLeft="16dp"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/edtOTP"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
    <EditText
        android:id="@+id/edtConfirmPass"
        android:fontFamily="@font/helveticaneue"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="42dp"
        android:layout_marginRight="42dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_edittext"
        android:hint="Nhập mã OTP"
        android:paddingLeft="16dp"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/edtPass"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
    <Button
        android:id="@+id/btnGui"
        android:fontFamily="@font/helveticaneue"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="42dp"
        android:layout_marginRight="42dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/custom_btnlogin"
        android:text="@string/title_send"
        android:textColor="@color/color_white"
        android:textSize="14dp"
        app:layout_constraintTop_toBottomOf="@+id/edtConfirmPass" />

</androidx.constraintlayout.widget.ConstraintLayout>